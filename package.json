{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "prepare": "remix setup && prisma generate && npm run postcss",
    "dev": "concurrently --prefix-colors cyan,green --kill-others npm:remix-run npm:postcss-watch",
    "dev-test": "cross-env DATABASE_URL=file:./data/test.db prisma migrate reset --force && cross-env DATABASE_URL=file:./data/test.db concurrently --prefix-colors cyan,green,magenta --kill-others npm:remix-run npm:postcss-watch npm:playwright-watch",
    "build": "npm run postcss-build && npm run remix-build",
    "test": "concurrently --prefix-colors cyan,green --success last --kill-others \"npm run remix-build && npm run start\" \"wait-on tcp:localhost:3000 && npm run playwright-run\"",
    "typecheck": "tsc --project ./tsconfig.base.json --noEmit",
    "start": "remix-serve build",
    "remix-run": "remix run",
    "remix-build": "remix build",
    "postcss": "postcss styles --base styles --dir app/styles",
    "postcss-watch": "npm run postcss -- --watch",
    "postcss-build": "npm run postcss -- --env production",
    "playwright-run": "playwright test",
    "playwright-watch": "chokidar \"./{app,tests}/**/*.{ts,tsx}\" --command \"npm run playwright-run\" --initial"
  },
  "dependencies": {
    "@prisma/client": "3.0.2",
    "@remix-run/react": "^0.18.1",
    "@remix-run/serve": "^0.18.1",
    "bcryptjs": "2.4.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^6.0.0-beta.0",
    "remix": "^0.18.1",
    "zod": "3.8.2"
  },
  "devDependencies": {
    "@heroicons/react": "1.0.4",
    "@playwright/test": "1.14.1",
    "@remix-run/dev": "^0.18.1",
    "@tailwindcss/line-clamp": "0.2.1",
    "@types/bcryptjs": "2.4.2",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.4",
    "autoprefixer": "10.3.4",
    "chokidar-cli": "3.0.0",
    "clsx": "1.1.1",
    "concurrently": "6.2.1",
    "cookie": "0.4.1",
    "cross-env": "7.0.3",
    "postcss": "8.3.6",
    "postcss-cli": "8.3.1",
    "prisma": "3.0.2",
    "tailwindcss": "2.2.14",
    "typescript": "^4.1.2",
    "wait-on": "6.0.0"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
